{
  "version": 2,
  "alias": "i-do-not-stand-by-in-the-presence-of-evil.com",
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/now-builder",
      "config": {
        "serverFiles": [
          "src/static/**"
        ]
      }
    },
    {
      "src": "src/static/**",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/_nuxt/.+",
      "headers": {
        "Cache-Control": "max-age=31557600"
      }
    },
    {
      "src": "/(.*)/$",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
